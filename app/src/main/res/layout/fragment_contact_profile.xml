<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contact_profile_layout"
    tools:context=".fragments.ContactProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F1F1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contact_profile"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_baseline_account_circle_24"/>

            <TextView
                android:id="@+id/profile_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Saw Eh Dar Ler"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="100dp"
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contacts_bg"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_contact_number"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="097996239994"/>

                <ImageView
                    android:id="@+id/profile_contact_ph_call"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/white_phone_call"/>

                <ImageView
                    android:id="@+id/profile_contact_ph_msg"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_baseline_message_24"/>

            </LinearLayout>

            <!--Call log-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<!--                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flower2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>